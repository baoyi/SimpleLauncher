<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Launcher" >

    <LinearLayout
        android:id="@+id/layout_weather"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/dawn_a"
        android:orientation="vertical" >

        <DigitalClock
            android:id="@+id/digitalClock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DigitalClock"
            android:textSize="22sp" />
    </LinearLayout>

    <com.nizi123.widget.ScrollLayout
       android:layout_width="fill_parent"    
	  android:layout_height="fill_parent"
        android:layout_weight="1" >
<TextView android:layout_width="match_parent" android:text="设置"
            android:layout_height="wrap_content" android:background="@android:color/holo_blue_light"/>
        <GridView
            android:id="@+id/allAppGv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_weather"
            android:numColumns="4" >
        </GridView>
        <TextView android:layout_width="match_parent"  android:text="测试"
            android:layout_height="wrap_content" android:background="@android:color/holo_blue_light"/>
    </com.nizi123.widget.ScrollLayout>

</LinearLayout>